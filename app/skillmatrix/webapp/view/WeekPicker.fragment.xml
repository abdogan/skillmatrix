<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:unified="sap.ui.unified"
    xmlns:core="sap.ui.core">
    
    <Popover
        id="weekPickerPopover"
        placement="Bottom"
        showHeader="false"
        contentWidth="auto"
        contentHeight="auto"
        class="sapUiContentPadding">
        
        <unified:Calendar
            id="calendarWeekPicker"
            singleSelection="false"
          
            select=".onWeekSelected"
        />
    </Popover>
</core:FragmentDefinition>